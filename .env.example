# B2B single (USSD push)
# You can set either the full URL or just the base URL.
MPESA_B2B_USSD_API_URL=https://sandbox.safaricom.co.ke/v1/ussdpush/get-msisdn
MPESA_B2B_USSD_API_BASE_URL=
MPESA_B2B_CALLBACK_URL=
MPESA_B2B_PRIMARY_SHORT_CODE=
MPESA_B2B_RECEIVER_SHORT_CODE=
MPESA_B2B_PARTNER_NAME=Vendor
MPESA_B2B_PAYMENT_REF=paymentRef

# OAuth2 gateway
OAUTH2_ACCESS_TOKEN_EXPIRE_SECONDS=28800

# C2B shortcode (sandbox commonly uses 600000)
C2B_SHORTCODE=

# STK push request fields
PARTY_A=
PHONE_NUMBER=
ACCOUNT_REFERENCE=
STK_CALLBACK_URL=

# C2B register URLs (publicly reachable)
CONFIRMATION_URL=
VALIDATION_URL=

# Optional production security
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=false
SECURE_HSTS_PRELOAD=false
SECURE_SSL_REDIRECT=false
SESSION_COOKIE_SECURE=true
